<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.landry.AdminController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20.0" style="-fx-background-color: #bfa316; -fx-padding: 15;">
            <Label text=" Admin" textFill="#ede8e9">
                <font>
                    <Font name="System Bold" size="20.0" />
                </font>
            </Label>
            <HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
                <Button onAction="#Logout" style="-fx-background-color: #ff4444; -fx-text-fill: white;" text="Logout" />
            </HBox>
        </HBox>
    </top>

    <left>
        <VBox spacing="10.0" style="-fx-background-color: #e0e0e0; -fx-padding: 15;">
            <Button maxWidth="Infinity" style="-fx-background-color: #14bf2c; -fx-text-fill: white;" text="Active Orders" />
            <Button maxWidth="Infinity" text="New Order (+)" />
            <Button maxWidth="Infinity" text="Pickup Requests" />
            <Button maxWidth="Infinity" text="Revenue Report" />
        </VBox>
    </left>

    <center>
        <VBox spacing="10.0" style="-fx-padding: 20;">
            <Label text="Active Orders">
                <font>
                    <Font size="18.0" />
                </font>
            </Label>

            <TableView fx:id="orderTable" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colId" prefWidth="75.0" text="Order ID" />
                    <TableColumn fx:id="colCustomer" prefWidth="150.0" text="Customer Name" />
                    <TableColumn fx:id="colStatus" prefWidth="100.0" text="Status" />
                    <TableColumn fx:id="colTotal" prefWidth="100.0" text="Total (Tk)" />
                </columns>
                <columnResizePolicy>
                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                </columnResizePolicy>
            </TableView>

            <HBox alignment="CENTER_RIGHT" spacing="15.0">
                <Label text="Update Status to: " />
                <Button onAction="#Washing" style="-fx-base: #ffd700;" text="Washing" />
                <Button onAction="#Ready" style="-fx-base: #32cd32;" text="Ready" />
                <Button onAction="#Delivered" style="-fx-base: #808080;" text="Delivered" />
            </HBox>
        </VBox>
    </center>

</BorderPane>
