<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="15.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.landry.RegisterController">

    <padding>
        <Insets bottom="20.0" left="40.0" right="40.0" top="20.0" />
    </padding>

    <Label text="Create Account" textFill="#2a5082">
        <font>
            <Font name="System Bold" size="22.0" />
        </font>
    </Label>


    <VBox maxWidth="300.0" spacing="10.0">
        <TextField fx:id="NameField" promptText="Full Name" style="-fx-padding: 10; -fx-background-radius: 5;" />

        <TextField fx:id="phnField" promptText="Phone Number(ID)" style="-fx-padding: 10; -fx-background-radius: 5;" />

        <TextField fx:id="addField" promptText="Pickup Address" style="-fx-padding: 10; -fx-background-radius: 5;" />

        <PasswordField fx:id="passField" promptText="Set a Password" style="-fx-padding: 10; -fx-background-radius: 5;" />
    </VBox>

    <Label fx:id="statusLabel" textFill="RED" />

    <Button maxWidth="300.0" onAction="#Register" style="-fx-background-color: #2a5082; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-cursor: hand;" text="Register Now" />

    <Button onAction="#switchToLogin" style="-fx-background-color: transparent; -fx-text-fill: #2a5082; -fx-underline: true; -fx-cursor: hand;" text="Already have an account? Login" />

</VBox>
