<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.landry.HelloController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>

    <Label text="Make Your Life Easy" textFill="#2a5082">
        <font>
            <Font name="System Bold" size="24.0" />
        </font>
    </Label>

    <VBox alignment="CENTER" maxWidth="300.0" spacing="10.0">
        <TextField fx:id="userField" promptText="Phone Number or User ID" style="-fx-padding: 10; -fx-background-radius: 5;" />

        <PasswordField fx:id="passField" promptText="Password" style="-fx-padding: 10; -fx-background-radius: 5;" />

        <Button fx:id="loginBtn" maxWidth="Infinity" onAction="#Login" style="-fx-background-color: #2a5082; -fx-text-fill: white; -fx-font-weight: bold; -fx-padding: 10; -fx-cursor: hand;" text="Login" />
    </VBox>

    <Label fx:id="msglbl" textFill="RED" />

    <Button onAction="#CreatAcc" style="-fx-background-color: transparent; -fx-text-fill: #2a5082; -fx-underline: true; -fx-cursor: hand;" text="New Customer? Create Account" />

</VBox>
